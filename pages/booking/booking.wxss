/* booking.wxss */

.container {
  padding: 20rpx;
  padding-bottom: 140rpx; /* 为底部按钮留出空间 */
}

/* 头部样式 */
.header {
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.page-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 20rpx;
}

.court-summary {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.court-name {
  font-size: 28rpx;
  color: #666;
}

.court-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #e74c3c;
}

/* 区块头部样式 */
.section-header {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

/* 日期选择样式 */
.date-section {
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.date-options {
  display: flex;
  gap: 20rpx;
}

.date-btn {
  flex: 1;
  padding: 30rpx 20rpx;
  border: 4rpx solid #e9ecef;
  background: white;
  border-radius: 20rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.date-btn.active {
  background: #667eea;
  border-color: #667eea;
  color: white;
}

.date-text {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.date-detail {
  display: block;
  font-size: 24rpx;
  opacity: 0.8;
}

/* 时间段选择样式 */
.time-section {
  padding: 40rpx;
  margin-bottom: 30rpx;
}

.time-slots {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.slot-btn {
  flex: 0 0 calc(33.333% - 14rpx);
  padding: 30rpx 20rpx;
  border: 4rpx solid #e9ecef;
  background: white;
  border-radius: 20rpx;
  text-align: center;
  position: relative;
  transition: all 0.3s ease;
}

.slot-btn.selected {
  background: #667eea;
  border-color: #667eea;
  color: white;
}

.slot-btn.unavailable {
  background: #f8f9fa;
  color: #adb5bd;
  opacity: 0.6;
}

.slot-time {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
}

.slot-status {
  display: block;
  font-size: 20rpx;
  margin-top: 4rpx;
  opacity: 0.8;
}

/* 预订摘要样式 */
.summary-section {
  padding: 40rpx;
  margin-bottom: 30rpx;
  border-left: 8rpx solid #667eea;
}

.summary-content {
  background: #f8f9fa;
  padding: 30rpx;
  border-radius: 20rpx;
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 10rpx 0;
}

.summary-item:last-child {
  margin-bottom: 0;
}

.summary-item.total {
  border-top: 2rpx solid #dee2e6;
  margin-top: 20rpx;
  padding-top: 30rpx;
  font-weight: 600;
  font-size: 32rpx;
}

.item-label {
  color: #666;
  font-size: 28rpx;
}

.item-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

.item-value.price {
  color: #e74c3c;
  font-size: 32rpx;
  font-weight: 700;
}

/* 底部按钮样式 */
.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  padding: 30rpx 40rpx;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0,0,0,0.1);
}

.footer button {
  flex: 1;
  padding: 28rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.btn-primary.disabled {
  background: #adb5bd !important;
  color: white !important;
}
