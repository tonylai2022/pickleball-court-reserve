/* privacy.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 0;
}

.header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 40rpx;
  color: white;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 20rpx;
}

.last-updated {
  font-size: 28rpx;
  opacity: 0.8;
  display: block;
}

.content {
  max-height: calc(100vh - 300rpx);
  padding: 40rpx;
}

.section {
  background: white;
  margin-bottom: 30rpx;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 24rpx;
}

.section-content {
  font-size: 32rpx;
  line-height: 1.6;
  color: #666;
  display: block;
  white-space: pre-line;
}

.footer {
  padding: 30rpx 40rpx 40rpx;
  background: white;
  border-top: 1rpx solid #eee;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  font-weight: bold;
}
