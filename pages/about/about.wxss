/* about.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  background: white;
  padding: 60rpx 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
}

.app-name {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.version {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.info-card {
  background: white;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.venue-info {
  text-align: center;
}

.venue-name {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.venue-address {
  display: block;
  font-size: 32rpx;
  color: #667eea;
  margin-bottom: 20rpx;
}

.venue-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

.features, .contact-info {
  background: white;
  padding: 40rpx;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.feature-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.feature-item {
  flex: 1;
  min-width: 280rpx;
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.feature-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.feature-text {
  font-size: 30rpx;
  color: #333;
}

.contact-list {
  space-y: 20rpx;
}

.contact-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.contact-item:last-child {
  border-bottom: none;
}

.contact-label {
  font-size: 32rpx;
  color: #666;
}

.contact-value {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.legal-links {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-bottom: 40rpx;
}

.link-button {
  background: none;
  border: 1rpx solid #667eea;
  color: #667eea;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 50rpx;
}

.link-button::after {
  border: none;
}

.footer {
  text-align: center;
  padding: 40rpx 0;
}

.copyright {
  display: block;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.powered {
  display: block;
  font-size: 26rpx;
  color: #bbb;
}
