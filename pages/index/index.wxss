/* index.wxss */

.container {
  padding: 30rpx;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 60rpx;
  color: white;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
  text-shadow: 4rpx 4rpx 8rpx rgba(0,0,0,0.3);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  font-weight: 300;
}

/* 球场卡片样式 */
.court-card {
  margin-bottom: 40rpx;
}

.court-image {
  position: relative;
  height: 400rpx;
  overflow: hidden;
}

.court-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.court-status {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  background: #4CAF50;
  color: white;
  padding: 16rpx 32rpx;
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 600;
}

/* 球场信息样式 */
.court-info {
  padding: 40rpx;
}

.court-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #2c3e50;
}

.court-description {
  display: block;
  color: #666;
  margin-bottom: 30rpx;
  line-height: 1.6;
  font-size: 28rpx;
}

/* 价格信息样式 */
.price-info {
  display: flex;
  align-items: baseline;
  margin-bottom: 30rpx;
}

.price {
  font-size: 48rpx;
  font-weight: 700;
  color: #e74c3c;
  margin-right: 16rpx;
}

.duration {
  color: #666;
  font-size: 28rpx;
}

/* 球场特色样式 */
.court-features {
  display: flex;
  justify-content: space-between;
  margin-bottom: 40rpx;
  gap: 20rpx;
}

.feature {
  flex: 1;
  background: #f8f9fa;
  padding: 20rpx;
  border-radius: 20rpx;
  text-align: center;
  border: 2rpx solid #e9ecef;
}

.feature-icon {
  display: block;
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.feature-text {
  font-size: 24rpx;
  color: #555;
}

/* 预订按钮样式 */
.book-btn {
  width: 100%;
  padding: 30rpx;
  border-radius: 20rpx;
  font-size: 32rpx;
  font-weight: 600;
}

/* 信息区域样式 */
.info-section {
  padding: 40rpx;
}

.info-header {
  margin-bottom: 30rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
}

.info-content {
  
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f8f9fa;
}

.info-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.info-label {
  color: #666;
  font-size: 28rpx;
}

.info-value {
  color: #333;
  font-size: 28rpx;
  font-weight: 500;
}

/* 底部链接样式 */
.footer-links {
  display: flex;
  justify-content: center;
  gap: 40rpx;
  margin-top: 60rpx;
  padding: 40rpx 0;
  border-top: 1rpx solid #eee;
}

.footer-link {
  background: none;
  border: 1rpx solid #667eea;
  color: #667eea;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 50rpx;
  line-height: 1;
}

.footer-link::after {
  border: none;
}
